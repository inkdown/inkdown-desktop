{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "inkdown",
  "version": "0.1.0",
  "identifier": "com.inkdow",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "inkdown",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://releases.inkdown.app/{{target}}/{{arch}}/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQ5NzZBMTlEMjRGMDg4QTUKUldTbGlQQWtuYUYyMlJQT3hRT3lHWWJ2bkdzWGNjSXk4ZWFGWXhIL1krMlJ2dU5nUHd1QjliT2UK"
    }
  },
  "bundle": {
    "windows": {
      "wix": {
        "language": "en-US"
      }
    },
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ]
  }
}
